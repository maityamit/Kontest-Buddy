<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="#2A2A2A"
    android:layout_marginTop="5dp"
    android:layout_marginStart="10dp"
    android:layout_marginEnd="10dp"
    android:layout_marginBottom="5dp"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="80dp"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/CFrank_codeFrank"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:textSize="20sp"
            android:textColor="@android:color/white"
            android:text="1"/>

        <androidx.cardview.widget.CardView
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginStart="20dp"
            app:cardCornerRadius="10dp">

            <ImageView
                android:id="@+id/rank_UserImage"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@drawable/codeforces"/>

        </androidx.cardview.widget.CardView>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/CFrank_userName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#FC911F"
                android:textSize="18sp"
                android:textStyle="bold"
                android:text="Amit Maity"/>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:orientation="horizontal">


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#6F6F6F"
                    android:textSize="13sp"
                    android:text="Ratings:"/>
                <TextView
                    android:id="@+id/CFrank_userRatings"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10dp"
                    android:textColor="@android:color/white"
                    android:textStyle="bold"
                    android:text="2015"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="20dp"
                    android:textColor="#6F6F6F"
                    android:textSize="13sp"
                    android:text="Rank:"/>
                <TextView
                    android:id="@+id/CFrank_userPosition"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10dp"
                    android:textColor="@android:color/white"
                    android:textStyle="bold"
                    android:text="1050"/>


            </LinearLayout>


        </LinearLayout>



    </LinearLayout>


</RelativeLayout>