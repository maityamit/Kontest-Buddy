<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="#1A1A1A"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:weightSum="12"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:layout_marginStart="20dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="20dp">

        <androidx.cardview.widget.CardView
            android:layout_width="40dp"
            android:layout_height="40dp"
            app:cardCornerRadius="5dp">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@drawable/codeforces"/>

        </androidx.cardview.widget.CardView>

        <EditText
            android:id="@+id/codeforces_compare_inputUser1"
            android:layout_width="200dp"
            android:layout_height="50dp"
            android:backgroundTint="#2A2A2A"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"
            android:textCursorDrawable="@null"
            android:hint="user1"
            android:paddingStart="20dp"
            android:inputType="textShortMessage"
            android:textColor="@android:color/white"
            android:textColorHint="#959595"
            android:background="@drawable/all_rounded"/>


        <TextView
            android:id="@+id/codeforces_compare_inputUser1_Verify"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textColor="@color/white"
            android:textSize="13sp"
            android:text="@string/verify"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:weightSum="12"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:layout_marginStart="20dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="20dp">

        <androidx.cardview.widget.CardView
            android:layout_width="40dp"
            android:layout_height="40dp"
            app:cardCornerRadius="5dp">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@drawable/codeforces"/>

        </androidx.cardview.widget.CardView>

        <EditText
            android:id="@+id/codeforces_compare_inputUser2"
            android:layout_width="200dp"
            android:layout_height="50dp"
            android:backgroundTint="#2A2A2A"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"
            android:textCursorDrawable="@null"
            android:hint="user2"
            android:paddingStart="20dp"
            android:inputType="textShortMessage"
            android:textColor="@android:color/white"
            android:textColorHint="#959595"
            android:background="@drawable/all_rounded"/>


        <TextView
            android:id="@+id/codeforces_compare_inputUser2_verify"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textColor="@color/white"
            android:textSize="13sp"
            android:text="@string/verify"/>

    </LinearLayout>

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/codeforces_compare_Button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:text="Compare"
        android:backgroundTint="#FFA116"
        android:textSize="18sp"
        android:textStyle="bold"
        android:textColor="@android:color/white"
        android:textAllCaps="false"
        android:background="@drawable/all_rounded"
        android:layout_marginBottom="20dp"
        android:layout_gravity="center_horizontal"/>

</LinearLayout>